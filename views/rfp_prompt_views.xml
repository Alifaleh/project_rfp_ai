<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_rfp_prompt_tree" model="ir.ui.view">
            <field name="name">rfp.prompt.tree</field>
            <field name="model">rfp.prompt</field>
            <field name="arch" type="xml">
                <list string="AI Prompts">
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_rfp_prompt_form" model="ir.ui.view">
            <field name="name">rfp.prompt.form</field>
            <field name="model">rfp.prompt</field>
            <field name="arch" type="xml">
                <form string="AI Prompt">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Template">
                                <field name="template_text" widget="ace" options="{'mode': 'xml'}"/>
                                <p class="text-muted">
                                    Use placeholders like
                                    <b>{context}</b>
                                    or
                                    <b>{section_name}</b>
                                    depending on the prompt usage.
                                </p>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_rfp_prompt" model="ir.actions.act_window">
            <field name="name">AI Prompts</field>
            <field name="res_model">rfp.prompt</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define your first AI Prompt
                </p>
            </field>
        </record>
    </data>
</odoo>
