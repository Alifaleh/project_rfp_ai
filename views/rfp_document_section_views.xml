<odoo>
    <record id="view_rfp_document_section_tree" model="ir.ui.view">
        <field name="name">rfp.document.section.list</field>
        <field name="model">rfp.document.section</field>
        <field name="arch" type="xml">
            <list string="Document Sections">
                <field name="project_id"/>
                <field name="sequence" widget="handle"/>
                <field name="section_title"/>
            </list>
        </field>
    </record>

    <record id="action_rfp_document_section" model="ir.actions.act_window">
        <field name="name">Document Sections</field>
        <field name="res_model">rfp.document.section</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
