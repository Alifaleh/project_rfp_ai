<odoo>
    <record id="view_rfp_project_form" model="ir.ui.view">
        <field name="name">rfp.project.form</field>
        <field name="model">rfp.project</field>
        <field name="arch" type="xml">
            <form string="RFP Project">
                <header>
                    <button name="action_initialize_project" string="Initialize Project" type="object" class="oe_highlight" invisible="current_stage != 'draft'"/>
                    
                    <!-- Debug/Manual Progression Buttons (Admin) -->
                    <button name="action_analyze_gap" string="Run Analysis (Info Gap)" type="object" invisible="current_stage != 'initialized'"/>
                    <button name="action_refine_practices" string="Refine Practices" type="object" invisible="current_stage != 'info_gathered'"/>
                    <button name="action_check_specifications" string="Check Specifications" type="object" invisible="current_stage != 'practices_refined'"/>
                    <button name="action_analyze_practices_gap" string="Analyze Practices" type="object" invisible="current_stage != 'specifications_gathered'"/>
                    <button name="action_generate_structure" string="Generate Structure" type="object" invisible="current_stage != 'practices_gap_gathered'"/>
                    <button name="action_generate_content" string="Generate Content" type="object" invisible="current_stage != 'sections_generated'"/>
                    <button name="action_check_generation_status" string="Example Check Status" type="object" invisible="current_stage != 'generating_content'"/>
                    
                    <button name="action_mark_completed" string="Force Complete" type="object" invisible="current_stage not in ['content_generated', 'completed_with_errors']"/>
                    
                    <field name="current_stage" widget="statusbar" statusbar_visible="draft,initialized,info_gathered,practices_refined,specifications_gathered,practices_gap_gathered,sections_generated,generating_content,content_generated,document_locked" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="domain_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe your project idea..."/>
                        </page>
                        <page string="Gathered Inputs">
                            <field name="form_input_ids">
                                <list editable="bottom">
                                    <field name="field_key"/>
                                    <field name="label"/>
                                    <field name="user_value"/>
                                    <field name="data_type"/>
                                    <field name="round_number"/>
                                </list>
                            </field>

                        </page>
                        <page string="Practices Inputs">
                            <field name="practice_input_ids">
                                <list editable="bottom">
                                    <field name="field_key"/>
                                    <field name="label"/>
                                    <field name="user_value"/>
                                    <field name="data_type"/>
                                    <field name="round_number"/>
                                </list>
                            </field>
                        </page>
                        <page string="Generated Sections">
                            <field name="document_section_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="section_title"/>
                                    <field name="generation_status" widget="badge" decoration-muted="generation_status == 'pending'" decoration-info="generation_status == 'queued'" decoration-warning="generation_status == 'generating'" decoration-success="generation_status == 'success'" decoration-danger="generation_status == 'failed'"/>
                                    <field name="job_id" optional="hide" widget="many2one"/>
                                </list>
                            </field>
                        </page>
                        <page string="Research &amp; Best Practices">
                            <group>
                                <field name="initial_research"/>
                                <field name="refined_practices"/>
                            </group>
                        </page>
                        <page string="AI Context" name="ai_context">
                            <field name="ai_context_blob" readonly="0"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_rfp_project_tree" model="ir.ui.view">
        <field name="name">rfp.project.list</field>
        <field name="model">rfp.project</field>
        <field name="arch" type="xml">
            <list string="RFP Projects">
                <field name="name"/>
                <field name="domain_id"/>
                <field name="current_stage" widget="badge" decoration-info="current_stage == 'gathering'" decoration-warning="current_stage == 'structuring'" decoration-primary="current_stage == 'writing'" decoration-success="current_stage == 'completed'"/>
            </list>
        </field>
    </record>

    <record id="action_rfp_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">rfp.project</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new AI-Driven RFP Project
            </p>
        </field>
    </record>
</odoo>
